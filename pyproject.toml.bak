[tool.poetry]
name = "espm"
version = "0.1.1"
description = "Electron Spectro-Microscopy Python Library"
readme = "README.md"
authors = ["Adrien Teurtie, Nathanael Perraudin"]
license = "MIT"



[tool.poetry.dependencies]
python = ">=3.10.0,<4.0"
hyperspy = "*"
tqdm = "*"
lmfit = "*"
scikit-learn = "*"

[tool.poetry.dev-dependencies]
pytest = "*"
jupyterlab = "*"
twine = "*"
setuptools = "*"
wheel = "*"
hyperspy-gui-ipywidgets = "*"
hyperspy-gui-traitsui = "*"
pysptools = "*"
flake8 = "*"
pylint = "*"
sphinx = "*"
numpydoc = "*"
sphinxcontrib-bibtex = "*"
sphinx-gallery = "*"
memory_profiler = "*"
sphinx-rtd-theme = "*"
sphinx-copybutton = "*"


[build-system]
requires = ["poetry-core>=1.0.0"]
build-backend = "poetry.core.masonry.api"

[tool.pytest.ini_options]
filterwarnings = [
    "error",
    "ignore::UserWarning",
    # note the use of single quote below to denote "raw" strings in TOML
    'ignore:function ham\(\) is deprecated:DeprecationWarning',
]
